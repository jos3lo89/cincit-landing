---
import ComingSoon from "@/components/ComingSoon.astro";
import ScheduleTimeline from "@/components/ScheduleTimeline.vue";
import Layout from "@/layouts/Layout.astro";

import { eventDays, scheduleData } from "@/data/timeLine.data";

const show = true;
---

<Layout title="Cronograma del Evento">
  <section class="text-center pt-10 px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in-up">
      <span class="text-gradient">Cronograma</span>
    </h2>
  </section>

  {
    show ? (
      <ScheduleTimeline
        client:load
        eventDays={eventDays}
        scheduleData={scheduleData}
      />
    ) : (
      <ComingSoon />
    )
  }
</Layout>
