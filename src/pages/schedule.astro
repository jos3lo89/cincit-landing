---
import ComingSoon from "@/components/ComingSoon.astro";
import ScheduleTimeline from "@/components/ScheduleTimeline.vue";
import Layout from "@/layouts/Layout.astro";

const show = false;
---

<Layout
  title="Cronograma del Evento - CINCIT 2025"
  description="Consulta el cronograma completo de ponencias, talleres y actividades del CINCIT 2025, del 10 al 13 de noviembre."
>
  <section class="text-center pt-10 px-4 sm:px-6 lg:px-8">
    <h1
      class="text-gradient text-4xl md:text-6xl font-bold mb-6 animate-fade-in-up"
    >
      Cronograma del Evento
    </h1>
  </section>

  {show ? <ScheduleTimeline client:load /> : <ComingSoon />}
</Layout>
