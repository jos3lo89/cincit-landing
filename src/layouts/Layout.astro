---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import MouseMoveEffect from "@/components/ui/MouseMoveEffect.vue";
import FloatingNavigation from "@/components/FloatingNavigation.astro";
import DarkModeBackground from "@/components/ui/DarkModeBackground.astro";
import Footer from "@/sections/Footer.astro";

export interface Props {
  title?: string;
  description: string;
  robots?: {
    index: boolean;
    follow: boolean;
  };
}

const {
  title = "Cincit 2025",
  description,
  robots = { index: true, follow: true },
} = Astro.props;

const robotsContent = `${robots.index ? "index" : "noindex"},${robots.follow ? "follow" : "nofollow"}`;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/robot.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robotsContent} />

    <ClientRouter />
  </head>
  <body>
    <DarkModeBackground />
    <slot />
    <Footer />
    <FloatingNavigation />
    <MouseMoveEffect client:idle />
  </body>
</html>

<style>
  html,
  body {
  }
</style>
