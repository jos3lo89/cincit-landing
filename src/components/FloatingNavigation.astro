---
import {
  Calendar,
  GalleryVertical,
  House,
  UserPlus,
  Users,
} from "@lucide/astro";

const pathname = Astro.url.pathname;

const navItems = [
  { icon: House, label: "Inicio", href: "/" },
  { icon: Calendar, label: "Ponencias", href: "/schedule" },
  { icon: GalleryVertical, label: "Galería", href: "/gallery" },
  { icon: Users, label: "Nosotros", href: "/about" },
  { icon: UserPlus, label: "Inscríbete", href: "/register" },
];
---

<div
  class="fixed bottom-6 z-50 left-6 right-6 md:left-1/2 md:right-auto md:-translate-x-1/2"
>
  <nav
    class="bg-slate-900/95 border border-slate-700/50 rounded-2xl px-1 py-1 shadow-2xl shadow-black/20"
  >
    <div class="grid grid-cols-5 gap-1 md:gap-2 text-center">
      {
        navItems.map((item) => {
          const isActive = pathname === item.href;
          const Icon = item.icon;
          return (
            <a
              href={item.href}
              class:list={[
                "py-2 md:px-1 rounded-xl transition-all duration-300 group",
                {
                  "bg-blue-600/20 shadow-lg shadow-blue-500/25 border border-blue-500/30 text-white":
                    isActive,
                  "text-slate-300 hover:text-white hover:bg-slate-800/60":
                    !isActive,
                },
              ]}
            >
              <div class="flex justify-center items-center flex-col gap-1">
                <Icon
                  size={20}
                  class:list={[
                    "transition-all duration-300",
                    {
                      "text-blue-400 md:scale-110": isActive,
                      "text-slate-300 group-hover:text-white group-hover:scale-105":
                        !isActive,
                    },
                  ]}
                />
                <span
                  class:list={[
                    "text-xs font-medium transition-all duration-300",
                    {
                      "text-blue-400": isActive,
                      "text-slate-400 group-hover:text-white": !isActive,
                    },
                  ]}
                >
                  {item.label}
                </span>
              </div>
            </a>
          );
        })
      }
    </div>
  </nav>
</div>
