---
import EventCountdown from "@/components/EventCountdown.vue";
import SocialIcons from "@/components/SocialIcons.astro";
import Colorizer from "@/components/ui/Colorizer.astro";
import Container from "@/components/ui/Container.astro";
import MatrixText from "@/components/ui/MatrixText.vue";
import Robot from "@/components/ui/Robot.astro";
import { Info, Map, Ticket } from "@lucide/astro";
---

<Colorizer />
<Container>
  <div class="min-h-screen">
    <div
      class="text-center lg:text-start mx-auto grid grid-cols-1 lg:grid-cols-2 lg:pt-16 pt-4"
    >
      <div class="space-y-6">
        <h1
          class="text-5xl md:text-6xl xl:text-7xl drop-shadow-xs drop-shadow-cyan-500/50"
        >
          <MatrixText client:visible />
        </h1>
        <div class="space-y-2 text-center lg:text-left">
          <h2
            class="text-2xl md:text-2xl lg:text-2xl font-bold leading-tight text-white/70"
          >
            VI congreso internacional de computación e innovación tecnológica
            <!-- <span class="text-white/70">VI Congreso </span>
            <span class="text-gradient">Internacional</span>
            <br />
            <span class="text-white/70"> de </span>
            <span class="text-gradient">Computación</span>
            <span class="text-white/70">e innovación</span>
            <span class="text-gradient">tecnologica</span> -->
          </h2>
        </div>
        <!-- <p class="text-white/60">
          Participa en el evento y conoce las últimas novedades en inteligencia
          artificial, sistemas e informática.
        </p> -->

        <div
          class="flex items-center justify-center lg:justify-start gap-y-5 gap-x-3 my-6"
        >
          <a
            href="/about"
            class="flex items-center justify-center gap-1 rounded-lg px-3 py-1
       text-slate-300
      border border-slate-700 bg-slate-800/50
      transition-all duration-300 ease-in-out
      hover:bg-slate-700 hover:text-white hover:border-slate-600"
          >
            <Info class="h-5 w-5" />
            <span>¿Qué es CINCIT?</span>
          </a>
          <a
            target="_blank"
            href="https://www.google.com/maps/dir/-13.6581219,-73.3755826/-13.6647528,-73.3492756/@-13.6596644,-73.3719775,15z/data=!4m4!4m3!1m1!4e1!1m0?entry=ttu&g_ep=EgoyMDI1MDkxNi4wIKXMDSoASAFQAw%3D%3D"
            class="flex items-center justify-center gap-1 rounded-lg px-3 py-1
       text-slate-300
      border border-slate-700 bg-slate-800/50
      transition-all duration-300 ease-in-out
      hover:bg-slate-700 hover:text-white hover:border-slate-600"
          >
            <Map class="h-5 w-5" />
            <span>Cómo llegar</span>
          </a>
        </div>

        <div
          class="inline-flex cursor-pointer items-center gap-3 rounded-xl border border-sky-500/50 bg-slate-900 bg-gradient-to-r from-slate-900 via-sky-950 to-slate-900 px-4 py-2 text-sky-100 shadow-lg shadow-sky-500/20 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:shadow-sky-400/40"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-6 w-6 text-sky-400"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="font-medium">del 10 al 13 de noviembre del 2025</span>
        </div>

        <!-- <div
          class="inline-flex items-center gap-2 rounded-lg border border-white/20 bg-slate-900/95 px-3 py-2 text-white backdrop-blur-sm"
        >
          <Clock class="h-5 w-5 text-sky-600" />
          <span>del 11 al 14 de noviembre del 2025</span>
        </div> -->
        <EventCountdown client:visible />

        <div
          class="flex items-center justify-center lg:justify-start gap-y-5 gap-x-3 my-6"
        >
          <a
            href="#"
            target="_blank"
            class="flex items-center justify-center px-2 py-1 gap-1 rounded-lg text-slate-300
      border border-slate-700 bg-gray-800/30
      transition-all duration-300 ease-in-out
      hover:bg-slate-700 hover:text-white hover:border-slate-600"
          >
            <Ticket class="h-5 w-5" />
            <span>Adquiere tu entrada</span>
          </a>

          <!-- <a
            href="https://wa.link/u2ark6"
            target="_blank"
            class="flex items-center justify-center px-2 py-1 gap-1 rounded-lg text-slate-300
      border border-slate-700 bg-gray-800/30
      transition-all duration-300 ease-in-out
      hover:bg-slate-700 hover:text-white hover:border-slate-600"
          >
            <Ticket class="h-5 w-5" />
            <span>Adquiere tu entrada</span>
          </a> -->
        </div>
        <div
          class="flex flex-wrap justify-center lg:justify-start gap-2 text-sm text-muted-foreground"
        >
          <div class="flex items-center gap-2">
            <div
              class="w-2 h-2 bg-gradient-secondary rounded-full animate-glow"
            >
            </div>
            <span class="text-white/70">Andahuaylas, Apurimac, Perú</span>
          </div>
        </div>
        <SocialIcons />
      </div>

      <Robot />
    </div>
  </div>
</Container>
